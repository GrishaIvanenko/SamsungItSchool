<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_today">

    <fragment
        android:id="@+id/navigation_today"
        android:name="com.example.timedrive.today.maincode.TodayFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_today" />

    <fragment
        android:id="@+id/navigation_week"
        android:name="com.example.timedrive.week.maincode.WeekFragment"
        android:label="@string/title_week"
        tools:layout="@layout/fragment_week" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.timedrive.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_week" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.timedrive.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>